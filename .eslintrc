{
  "extends": ["@smartive/eslint-config/react", "next"],
  "ignorePatterns": ["test/**/*.js", "src/types/generated/**"],
  "rules": {
    "react-hooks/exhaustive-deps": "off",
    "react/display-name": "off",
    "@next/next/google-font-display": "off",
    "@next/next/no-img-element": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  }
}
